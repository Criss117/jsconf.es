---
const { href, style, class: className } = Astro.props
const Component = href ? 'a' : 'button'

const STYLES: Record<string, string> = {
  white: 'text-black hover:bg-black hover:text-white',
  black: 'text-white bg-black border-white hover:bg-white hover:text-black',
  yellow: 'text-black bg-javascript border-javascript hover:bg-white',
  transparent: 'text-white bg-transparent border-white hover:bg-black hover:text-white',
}

const currentStyle = STYLES[style] ?? STYLES.white
---

<Component
  class:list={[
    'px-12 py-4 border flex justify-center w-full md:w-auto gap-2 transition items-center',
    currentStyle,
    className,
  ]}
  href="#"
>
  <slot name="icon-left" />
  <span><slot /></span>
  <slot name="icon-right" />
</Component>
