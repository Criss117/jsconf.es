---
export interface CardProps {
  name: string
  role: string
  company: string
  description: string
  imageUrl: string
  badge?: boolean
  class?: string
  marginTop?: string
}

const { name, role, company, description, imageUrl, badge, marginTop } = Astro.props as CardProps
---

<div class="card font-clash bg-black text-white" ]>
  <img src={imageUrl} alt={name} class="w-full object-scale-down" />
  <div class="flex flex-col md:gap-y-[14px] gap-y-[6px] border border-white/10 md:p-6 p-3">
    <div>
      <div class="flex flex-row items-center justify-between">
        <h3 class="md:text-2xl text-sm font-medium">{name}</h3>
        {badge && <span class="badge bg-green-500 text-xs px-2 py-1 rounded">âœ”</span>}
      </div>
      <div class="flex flex-row gap-x-1 md:text-base text-[10px] text-yellow-400 font-medium">
        <p>{role}</p>
        <p>@{company}</p>
      </div>
    </div>
    <p class="md:text-sm text-xs leading-none text-neutral-400">{description}</p>
  </div>
</div>
<style define:vars={{ marginTop }}>
  .card {
    margin-top: var(--marginTop);
  }
  @media (max-width: 1024px) {
    .card {
      margin-top: 0;
    }
  }
</style>
