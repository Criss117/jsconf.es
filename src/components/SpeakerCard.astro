---
export interface CardProps {
  name: string;
  role: string;
  company: string;
  description: string;
  imageUrl: string;
  badge?: boolean;
}

const { name, role, company, description, imageUrl, badge } = Astro.props as CardProps;
---

<div class="card bg-black text-white p-10">
  <img
    src={imageUrl}
    alt={name}
    class="w-[331px] h-[308px] object-contain"
  />
  <div class="card-content border border-white pt-9 pb-9 pl-6 pr-6">
    <h3 class="text-lg font-clash">{name}</h3>
    <p class="text-sm text-yellow-400">{role}</p>
    <p class="text-sm text-gray-400">{company}</p>
    <p class="text-sm mt-2">{description}</p>
    {badge && <span class="badge bg-green-500 text-xs mt-2 px-2 py-1 rounded">âœ”</span>}
  </div>
</div>
