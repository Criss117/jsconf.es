---
import Cross from '@/assets/cross.svg'
---

<article
  class="relative bg-gradient-to-b from-white/5 border border-dotted border-neutral-700/80 w-full md:p-9 p-6 gap-y-6 flex flex-col"
>
  <Cross size={14} class="absolute -top-2 -left-2" />
  <Cross size={14} class="absolute -top-2 -right-2" />
  <Cross size={14} class="absolute -bottom-2 -left-2" />
  <Cross size={14} class="absolute -bottom-2 -right-2" />
  <div class="md:w-9/12">
    <slot name="title" />
  </div>
  <div class="w-5/6">
    <slot name="description" />
  </div>
</article>
