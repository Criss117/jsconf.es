---
import LogoIcon from '@/icons/Logo.svg'
import Button from '@/components/Button.astro'
---

<header>
  <div class="flex justify-around items-center border-b border-white/10 pb-2">
    <div class="flex flex-row gap-x-3 items-center justify-center">
      <LogoIcon />
      <div>
        <h5 class="font-clash font-semibold text-2xl flex flex-row gap-x-2 text-white">
          JSConf España
          <span
            class="rounded-full bg-javascript text-black font-semibold text-lg px-3 flex justify-center items-center"
            >2025
          </span>
        </h5>
        <span class="uppercase font-light text-white">1 MARZO 2025</span>
      </div>
    </div>
    <div class="text-white">
      <nav class="hidden md:flex gap-8 text-sm underline underline-offset-4">
        <a href="#agenda" class="hover:text-gray-300 transition">AGENDA</a>
        <a href="#speakers" class="hover:text-gray-300 transition">SPEAKERS</a>
        <a href="#sponsors" class="hover:text-gray-300 transition">SPONSORS</a>
      </nav>
    </div>
    <div class="flex items-center gap-4">
      <Button
        class="px-12 py-4 border border-black flex justify-center hover:bg-black hover:text-white w-full md:w-auto gap-2"
        href="#"
        style="black"
      >
        <span>¡Quiero patrocinar!</span>
        <svg
          slot="icon-right"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M16.0037 9.41421L7.39712 18.0208L5.98291 16.6066L14.5895 8H7.00373V6H18.0037V17H16.0037V9.41421Z"
            fill="currentColor"
          >
          </path>
        </svg>
      </Button>
      <Button class="flex items-center" style="yellow" href="#"> ¡Consigue tu entrada! </Button>
    </div>
  </div>
</header>
